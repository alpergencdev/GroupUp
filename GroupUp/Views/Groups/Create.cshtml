@model GroupUp.ViewModels.GroupViewModel

@{
    ViewBag.Title = "title";
}

<h2>Create Group</h2>

@using (Html.BeginForm("Save", "Groups", FormMethod.Post))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Group.Title)
        @Html.TextBoxFor(m => m.Group.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Group.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Group.Description)
        @Html.TextBoxFor(m => m.Group.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Group.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Group.MaxUserCapacity)
        @Html.TextBoxFor(m => m.Group.MaxUserCapacity, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Group.MaxUserCapacity)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Group.City)
        @Html.TextBoxFor(m => m.Group.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Group.City)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Group.Country)
        @Html.TextBoxFor(m => m.Group.Country, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Group.Country)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Group.Continent)
        @Html.TextBoxFor(m => m.Group.Continent, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Group.Continent)
    </div>

    @Html.HiddenFor(m =>m.Group.Members)
    @Html.HiddenFor(m => m.Group.Creator)
    <button class="btn btn-primary" type="submit">Create Group</button>
}
