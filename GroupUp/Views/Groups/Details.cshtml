@model GroupUp.ViewModels.GroupViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Group Details</h2>

@if (Model.Group == null)
{
    <p>The group with the given ID does not exist.</p>
}
else
{
    <p>Group Title: @Model.Group.Title</p>
    <p>Group Description: @Model.Group.Description</p>
    <p>Group Members:</p>
    <ul>
        @foreach (var usr in @Model.Group.Members)
        {
            <li>
                @usr.UserId
            </li>
        }
    </ul>

    using (@Html.BeginForm("Join", "Groups", new {groupId = Model.Group.GroupId}, FormMethod.Post))
    {
        <button type="submit" class="btn btn-primary">Join Group</button>
    }
}