@using GroupUp.Models
@model GroupUp.ViewModels.GroupReportViewModel
@{
    ViewBag.Title = "ReportGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Report Group</h2>

@{
    using (Html.BeginForm("PostGroupReport", "Reports", FormMethod.Post))
    {
        <p>Report for @Html.ActionLink(Model.TargetGroupTitle, "Details", "Groups", new {groupId = Model.ReportedGroupId}, null)</p>
        <div class="form-group">
            @Html.LabelFor(m => m.Reason)
            @Html.TextBoxFor(m => m.Reason, new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.Reason)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.Description)
        </div>

        @Html.HiddenFor(m => m.ReportedGroupId)
        @Html.HiddenFor(m => m.TargetGroupTitle)
        <button class="btn btn-primary" type="submit">SUBMIT REPORT</button>
    }
}

