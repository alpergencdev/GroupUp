@model GroupUp.ViewModels.UserReportViewModel
@{
    ViewBag.Title = "ReportUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Report User</h2>


@{
    using (Html.BeginForm("PostUserReport", "Reports", FormMethod.Post))
    {
        <p>Report for @Html.ActionLink(Model.TargetUsername, "Details", "Users", new { userId = Model.ReportedUserId}, null)</p>
        <div class="form-group">
            @Html.LabelFor(m => m.Reason)
            @Html.TextBoxFor(m => m.Reason, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Reason)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>

        @Html.HiddenFor(m => m.ReportedUserId)
        @Html.HiddenFor(m => m.TargetUsername)
        <button class="btn btn-primary" type="submit">SUBMIT REPORT</button>
    }
}